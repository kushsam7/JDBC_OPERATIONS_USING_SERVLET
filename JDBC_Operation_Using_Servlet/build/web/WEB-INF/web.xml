<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>InsertCode</servlet-name>
        <servlet-class>Servlets.InsertCode</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deldetail</servlet-name>
        <servlet-class>Servlets.deldetail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>editdetail</servlet-name>
        <servlet-class>Servlets.editdetail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateCode</servlet-name>
        <servlet-class>Servlets.UpdateCode</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginCode</servlet-name>
        <servlet-class>Servlets.LoginCode</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InsertCode</servlet-name>
        <url-pattern>/InsertCode</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deldetail</servlet-name>
        <url-pattern>/deldetail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editdetail</servlet-name>
        <url-pattern>/editdetail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateCode</servlet-name>
        <url-pattern>/UpdateCode</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginCode</servlet-name>
        <url-pattern>/LoginCode</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
